<%= form_for(@user, url: {action: 'update'}, html: {role: 'form', class: 'form-horizontal'}) do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <div class="col-lg-6 col-lg-offset-3">
    <%= f.label :f_name, class: 'sr-only' %><br />
    <%= f.text_field :f_name, autofocus: true, class: 'form-control', placeholder: 'First Name' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-6 col-lg-offset-3">
    <%= f.label :l_name, class: 'sr-only' %><br />
    <%= f.text_field :l_name, class: 'form-control', placeholder: 'Last Name' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-6 col-lg-offset-3">
    <%= f.label :username, class: 'sr-only' %><br />
    <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-6 col-lg-offset-3">
    <%= f.label :location, class: 'sr-only' %><br />
    <%= f.text_field :location, class: 'form-control', placeholder: 'Location' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-2 col-lg-offset-3">
    <%= f.label :avatar, style: 'margin-top: 5px;' %><br />
  </div>
  <div class="col-lg-4">
    <%= f.file_field :avatar, class: 'form-control', placeholder: 'Avatar' %>
  </div>
</div>

<div class="form-group">
  <div class="col-lg-6 col-lg-offset-3">
    <%= f.submit 'Submit', class: 'btn btn-success btn-block' %>
  </div>
</div>
<% end %>
