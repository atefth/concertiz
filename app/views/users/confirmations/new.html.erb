<h2 align="center">Resend confirmation instructions</h2>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, role: 'form', class: 'form-horizontal'}) do |f| %>
<%= devise_error_messages! %>

<div class="form-group">
	<div class="col-lg-6 col-lg-offset-3">
		<%= f.label :email, class: 'sr-only' %><br />
		<%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', placeholder: 'Email Address' %>
	</div>
</div>

<div class="form-group">
	<div class="col-lg-6 col-lg-offset-3">
	<%= f.submit "Resend confirmation instructions", class: 'btn btn-info btn-block' %>
	</div>
</div>
<% end %>

<div class="row">
	<div class="col-lg-6 col-lg-offset-3">
		<div class="row">
			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>
